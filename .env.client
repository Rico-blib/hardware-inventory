#############################################
#  CORE
#############################################
APP_NAME="Inventory POS"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost         # keep localhost for local install
APP_KEY=                         # leave blank – you’ll run key:generate on site

#############################################
#  LOGGING
#############################################
LOG_CHANNEL=stack
LOG_LEVEL=warning                # less noisy

#############################################
#  DATABASE
#############################################
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=inventory_pos          # let client create this DB
DB_USERNAME=root                 # or placeholder
DB_PASSWORD=                     # fill during install

#############################################
#  MAIL (optional)
#############################################
MAIL_MAILER=log
MAIL_HOST=mail.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#############################################
#  SESSION / QUEUE / CACHE
#############################################
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

#############################################
#  ACTIVATION / TRIAL  (optional extras)
#############################################
# TRIAL_DAYS=7                # if you want to make this configurable
# ACTIVATION_KEY=CUPA-TECH-HUB   # only if you prefer .env storage
